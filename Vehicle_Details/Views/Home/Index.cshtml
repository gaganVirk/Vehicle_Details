
@model  IEnumerable<Vehicle_Details.ViewModels.MainPageViewModel>

@{
   ViewData["Title"]="Home Page" ;
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
                @* @Html.DisplayNameFor(model => model.VehicleRegistration.Select)*@
            </th>
            <th>
                Manufacturer
                @*@Html.DisplayNameFor(model => model.VehicleRegistration.Manufacturer)*@
            </th>
            <th>
                Year
                @*@Html.DisplayNameFor(model => model.VehicleRegistration.Year)*@
            </th>
            <th>
                Weight
                @*@Html.DisplayNameFor(model => model.VehicleRegistration.Weight)*@
            </th>
            <th></th>
        </tr>
